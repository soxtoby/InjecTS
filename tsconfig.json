{
    "compileOnSave": true,
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "strict": true,
        "target": "es5",
        "sourceMap": true,
        "outDir": "lib",
        "declaration": true,
        "lib": [
            "es2015",
            "es2015.symbol",
            "es2017.object",
            "es2015.reflect"
        ],
        "baseUrl": ".",
        "paths": {
            "injec": ["lib/injec"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}